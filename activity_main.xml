<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF">

    <TextView
        android:id="@+id/displayTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:background="#CCCCCC"
        android:gravity="end"
        android:padding="80dp"
        android:textSize="28sp"/>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/displayTextView"
        android:columnCount="4"
        android:rowCount="5"
        android:layout_margin="30dp">

        <Button
            android:text="@string/button_7"
            style="@style/CalculatorButton"/>

        <Button
            android:text="@string/button_8"
            style="@style/CalculatorButton"/>

        <Button
            android:text="@string/button_9"
            style="@style/CalculatorButton"/>

        <Button
            android:text="@string/button_divide"
            style="@style/CalculatorButton_Operator"/>

        <Button
            android:text="@string/button_4"
            style="@style/CalculatorButton"/>

        <Button
            android:text="@string/button_5"
            style="@style/CalculatorButton"/>

        <Button
            android:text="@string/button_6"
            style="@style/CalculatorButton"/>

        <Button
            android:text="@string/button_multiply"
            style="@style/CalculatorButton_Operator"/>

        <Button
            android:text="@string/button_1"
            style="@style/CalculatorButton"/>

        <Button
            android:text="@string/button_2"
            style="@style/CalculatorButton"/>

        <Button
            android:text="@string/button_3"
            style="@style/CalculatorButton"/>

        <Button
            android:text="@string/button_subtract"
            style="@style/CalculatorButton_Operator"/>
        <Button
            android:text="@string/button_0"
            style="@style/CalculatorButton"/>

        <Button
            android:text="@string/button_dot"
            style="@style/CalculatorButton"/>
        <Button
            android:text="@string/button_backspace"
            style="@style/CalculatorButton"/>

        <Button
            android:text="@string/button_add"
            style="@style/CalculatorButton_Operator"/>

        <Button
            android:text="@string/button_equals"
            style="@style/CalculatorButton_Operator"
            android:layout_rowSpan="4"/>

        <Button
            android:text="@string/button_clear"
            style="@style/CalculatorButton_Clear"
            android:layout_rowSpan="4"/>

        <Button
            android:text="@string/Converter"
            style="@style/CalculatorButton_Converter"
            android:layout_rowSpan="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

    </GridLayout>

</RelativeLayout>